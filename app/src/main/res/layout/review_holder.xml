<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reviewer"
        style="@style/ReviewHeaderStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/reviewer_name" />

    <TextView
        android:id="@+id/review"
        style="@style/ReviewContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewer"
        tools:text="@string/review_sample" />

    <include
        layout="@layout/separator_view_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_view_separator_height"
        android:layout_below="@id/review" />

</RelativeLayout>