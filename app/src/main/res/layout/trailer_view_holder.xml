<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/trailer_content_padding">

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/play_icon_drawable" />

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/trailer_name_margin"
        android:layout_marginLeft="@dimen/trailer_name_margin"
        android:layout_marginRight="@dimen/trailer_name_margin"
        android:layout_marginStart="@dimen/trailer_name_margin"
        android:layout_toEndOf="@id/play_icon"
        android:layout_toLeftOf="@id/trailer_preview"
        android:layout_toRightOf="@id/play_icon"
        android:layout_toStartOf="@id/trailer_preview"
        tools:text="@string/trailer_name_tag" />

    <ImageView
        android:id="@+id/trailer_preview"
        android:layout_width="@dimen/trailer_preview_width"
        android:layout_height="@dimen/trailer_preview_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/movie_detail_title_gradient" />

</RelativeLayout>