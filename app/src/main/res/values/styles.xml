<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="MovieDetailTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailHeaderTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EmptyScreenTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ReviewHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/review_title_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/review_title_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/review_title_margin_horizontal</item>
    </style>

    <style name="ReviewItemStyle" parent="ReviewHeaderStyle">
        <item name="android:layout_marginBottom">@dimen/review_title_margin_vertical</item>
    </style>

    <style name="ReviewContentStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
</resources>